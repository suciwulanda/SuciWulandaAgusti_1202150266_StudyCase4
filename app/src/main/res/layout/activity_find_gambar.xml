<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.suci.suciwulandaagusti_1202150266_studycase4.FindGambar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/inputGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan URL Gambar"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btnGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik untuk mencari gambar"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp" />

    <ImageView
        android:id="@+id/imgGambar"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

</LinearLayout>
